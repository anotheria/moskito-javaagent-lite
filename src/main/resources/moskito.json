    "@accumulatorsConfig" : {
      "accumulationAmount": 250,
      "@accumulatorSets": [
        {
          "name": "Threads 1 Minute",
          "accumulatorNames": [
            "ThreadCount",
            "ThreadStateBlocked-1m",
            "ThreadStateRunnable-1m",
            "ThreadStateTimedWaiting-1m",
            "ThreadStateWaiting-1m"
          ]
        },
        {
          "name": "Threads 5 Minutes",
          "accumulatorNames": [
            "ThreadCount",
            "ThreadStateBlocked-5m",
            "ThreadStateRunnable-5m",
            "ThreadStateTimedWaiting-5m",
            "ThreadStateWaiting-5m"
          ]
        },
        {
          "name": "Web 1 Minute",
          "accumulatorNames": [
            "SessionCount Cur Absolute",
            "URL AVG 1m",
            "URL REQ 1m",
            "URL Time 1m"
          ],
          "mode": "MULTIPLE"
        },
        {
          "name": "Web 5 Minutes",
          "accumulatorNames": [
            "SessionCount Cur Absolute",
            "URL AVG 5m",
            "URL REQ 5m",
            "URL Time 5m"
          ],
          "mode": "MULTIPLE"
        },
        {
          "name": "Web 1 Hour",
          "accumulatorNames": [
            "SessionCount Cur Absolute",
            "URL AVG 1h",
            "URL REQ 1h",
            "URL Time 1h"
          ],
          "mode": "MULTIPLE"
        }
      ],
      "@accumulatorsColors": [
        {
          "name": "CPU Time 1h",
          "color": "#FF0000"
        },
        {
          "name": "CPU Time 1m",
          "color": "#00FF00"
        },
        {
          "name": "CPU Time 5m",
          "color": "#0000FF"
        }
      ],
      "@accumulators": [
        {
          "name": "System CPU Load 1m",
          "producerName": "OS",
          "statName": "OS",
          "valueName": "systemcpuload",
          "intervalName": "default"
        },
        {
          "name": "Process CPU Load 1m",
          "producerName": "OS",
          "statName": "OS",
          "valueName": "processcpuload",
          "intervalName": "default"
        },
        {
          "name": "CPU Time 1m",
          "producerName": "OS",
          "statName": "OS",
          "valueName": "CPU Time",
          "intervalName": "1m"
        },
        {
          "name": "CPU Time 5m",
          "producerName": "OS",
          "statName": "OS",
          "valueName": "CPU Time",
          "intervalName": "5m"
        },
        {
          "name": "CPU Time 1h",
          "producerName": "OS",
          "statName": "OS",
          "valueName": "CPU Time",
          "intervalName": "1h"
        }
      ]
    },
