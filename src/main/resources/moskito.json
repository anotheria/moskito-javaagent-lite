              "constant": 0
            },
            "@currentValue": {
              "producerName": "OS",
              "statName": "OS",
              "valueName": "systemcpuload",
              "intervalName": "default"
            },
            "@maxValue": {
              "constant": 100
            },
            "@zones":[
